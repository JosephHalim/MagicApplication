        <TextBlock x:Name="txb_text_Copy" HorizontalAlignment="Left" Margin="112,346,0,0" TextWrapping="Wrap" Text="Text:" VerticalAlignment="Top" Height="25" Width="100" SelectionChanged="txb_API_SelectionChanged" RenderTransformOrigin="0.482,2.4"/>
        <TextBlock x:Name="txb_power_Copy" HorizontalAlignment="Left" Margin="112,376,0,0" TextWrapping="Wrap" Text="Power:" VerticalAlignment="Top" Height="25" Width="100" SelectionChanged="txb_API_SelectionChanged" RenderTransformOrigin="0.482,2.4"/>
        <TextBlock x:Name="txb_toughness_Copy" HorizontalAlignment="Left" Margin="112,406,0,0" TextWrapping="Wrap" Text="Toughness:" VerticalAlignment="Top" Height="25" Width="100" SelectionChanged="txb_API_SelectionChanged" RenderTransformOrigin="0.482,2.4"/>
        <TextBlock x:Name="txb_printings_Copy" HorizontalAlignment="Left" Margin="112,436,0,0" TextWrapping="Wrap" Text="Printings:" VerticalAlignment="Top" Height="25" Width="100" SelectionChanged="txb_API_SelectionChanged" RenderTransformOrigin="0.482,2.4"/>
        <TextBlock x:Name="txb_legality_Copy" HorizontalAlignment="Left" Margin="112,466,0,0" TextWrapping="Wrap" Text="Legal in:" VerticalAlignment="Top" SelectionChanged="txb_API_SelectionChanged" RenderTransformOrigin="0.482,2.4" Width="100"/>
        <TextBlock x:Name="Test_Var" HorizontalAlignment="Left" Margin="588,117,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Page>
